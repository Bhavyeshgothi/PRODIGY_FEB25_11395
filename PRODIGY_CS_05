from scapy.all import sniff, IP, TCP, UDP

def process_packet(packet):
    """Processes each packet and extracts key details."""
    if IP in packet:
        src_ip = packet[IP].src
        dst_ip = packet[IP].dst
        protocol = packet[IP].proto

        if TCP in packet:
            src_port = packet[TCP].sport
            dst_port = packet[TCP].dport
            protocol_name = "TCP"
        elif UDP in packet:
            src_port = packet[UDP].sport
            dst_port = packet[UDP].dport
            protocol_name = "UDP"
        else:
            src_port = dst_port = None
            protocol_name = "Other"

        print(f"Packet: {protocol_name} | {src_ip}:{src_port} â†’ {dst_ip}:{dst_port} | Protocol: {protocol}")

# Capture packets (root/admin privileges required)
print("Capturing packets... Press Ctrl+C to stop.")
sniff(prn=process_packet, store=False)  # Sniff indefinitely
